{
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "esnext",
    "paths": {
      "@lib/*": ["./src/lib/*"],
      "@server/*": ["./src/server/*"]
    }
  }
}
